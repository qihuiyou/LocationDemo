<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--<com.amap.api.maps.MapView-->
        <!--android:id="@+id/map"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/white" />-->


    </LinearLayout>


    <com.qhy.demo.widget.ShadowContainer
        android:id="@+id/sc_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        app:containerCornerRadius="8dp"
        app:containerDeltaLength="8dp"
        app:containerShadowColor="#d2d2d2"
        app:containerShadowRadius="8dp">


        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_6dp_ffffff">


            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_home_tabsearch" />


            <TextView
                android:id="@+id/tv_search_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/icon_search"
                android:text="搜索"
                android:textColor="#606266"
                android:textSize="16sp" />


        </RelativeLayout>
    </com.qhy.demo.widget.ShadowContainer>


</RelativeLayout>
