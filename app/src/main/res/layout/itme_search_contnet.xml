<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_gps" />


    <TextView
        android:id="@+id/item_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="13.9km"
        android:textColor="#909399"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/item_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_tv_distance"
        android:layout_toRightOf="@id/iv_logo"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="上海市"
        android:textColor="#303133"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/item_tv_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_address"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toLeftOf="@id/item_tv_distance"
        android:layout_toRightOf="@id/iv_logo"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="中科路"
        android:textColor="#909399"
        android:textSize="12sp" />


    <View
        android:id="@+id/item_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@id/item_tv_street"
        android:layout_toRightOf="@id/iv_logo"
        android:background="#eeeeee" />


</RelativeLayout>