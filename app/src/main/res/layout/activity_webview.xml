<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#f4f5f7"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_web_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/icon_left_back" />

        <ImageView
            android:id="@+id/iv_web_share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/icon_more_gray" />


        <TextView
            android:id="@+id/tv_web_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toLeftOf="@id/iv_web_share"
            android:layout_toRightOf="@id/iv_web_back"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#222222"
            android:textSize="16sp"
            android:visibility="invisible" />

        <View
            android:id="@+id/view_web_title_line"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:visibility="invisible" />

    </RelativeLayout>


    <com.qhy.demo.base.BaseWebView
        android:id="@+id/basewebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


    </com.qhy.demo.base.BaseWebView>


</LinearLayout>